<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_g"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
       app:riv_corner_radius="12dp"
        />
    <TextView
        android:id="@+id/txt_g1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/img_g"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/txt_g2"
        android:layout_below="@id/txt_g1"
        android:layout_toRightOf="@+id/img_g"
        android:layout_marginTop="48dp"
        android:textSize="18sp"
        android:text="sfasfasff"
        android:textColor="@color/red"
        android:layout_width="75dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/txt_g3"
        android:layout_width="70dp"
        android:text="sfasfasffasfasf"
        android:textColor="#000000"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="250dp"
        android:textSize="10dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/txt_g4"
        android:layout_toRightOf="@+id/txt_g3"
        android:layout_below="@+id/txt_g1"
        android:textColor="#000000"
        android:layout_width="80dp"
        android:textSize="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="2dp"
        android:text="safawf"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/txt_g5"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/img_g"
        android:layout_below="@+id/txt_g1"
        android:layout_marginTop="75dp"
        />

    <ImageView
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/img_g"
        android:src="@drawable/xxx" />

</RelativeLayout>